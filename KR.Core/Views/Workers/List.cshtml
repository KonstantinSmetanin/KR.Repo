@using KR.Core.Models
@model IEnumerable<Worker>

@{
    Layout = "_Layout";
}

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Фамилия</th>
                    <th>Возраст</th>
                    <th>Пол</th>
                    <th>Дата приема на работу</th>
                    <th>Специальность</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @{
                    foreach(Worker item in Model)
                    {
                                <tr>
                                    <td>@item.LastName</td>
                                    <td>@item.Age</td>
                                    <td>@item.Gender</td>
                                    <td>@item.GetEmploymentDateAsAString</td>
                                    <td>@item.Speciality</td>
                                    <td>
                                        <div class="btn-group mr-2">
                                            <button class="btn btn-sm btn-outline-secondary" onclick="window.location.href='/Workers/Edit/@item.ID'">Редактировать</button>
                                            <button class="btn btn-sm btn-outline-secondary" onclick="window.location.href='/Workers/Delete/@item.ID'">Удалить</button>
                                            <button class="btn btn-sm btn-outline-secondary" onclick="window.location.href='/Workers/More/@item.ID'">Подробнее</button>
                                            
                                        </div>
                                    </td>

                                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
@*</main>*@

